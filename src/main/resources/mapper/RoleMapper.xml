    <select id="queryUserNum" resultType="int">
        SELECT COUNT(1)
        FROM t_user_role ur
        LEFT JOIN t_user u ON u.USER_ID = ur.USER_ID
        WHERE u.del_flag = 0
        AND ur.ROLE_ID = #{roleId}
    </select>-->
</mapper>